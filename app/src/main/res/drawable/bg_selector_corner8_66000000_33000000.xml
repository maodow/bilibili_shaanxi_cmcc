<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 获焦 -->
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/color_33000000" />
                    <stroke android:width="@dimen/dp_4" android:color="@color/color_white" />
                    <corners android:radius="@dimen/dp_8" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- 默认 -->
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/color_66000000" />
                    <corners android:radius="@dimen/dp_8" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>