<?xml version="1.0" encoding="utf-8"?>
<tv.huan.bilibili.widget.common.CommonRoundRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    app:rl_rate_height="0.6">

    <!-- 图片 -->
    <ImageView
        android:id="@+id/album_item_img_template72"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false"
        android:scaleType="fitXY" />

    <!-- 标题 -->
    <TextView
        android:id="@+id/album_item_name_template72"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:clickable="false"
        android:ellipsize="marquee"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="bottom|left"
        android:longClickable="false"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:paddingBottom="8dp"
        android:singleLine="true"
        android:text="-"
        android:textColor="#ffffff"
        android:textSize="12sp" />

</tv.huan.bilibili.widget.common.CommonRoundRelativeLayout>