<?xml version="1.0" encoding="utf-8"?>
<tv.huan.bilibili.widget.template16.Template16LinearLayoutCard xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_selector_general_template16_card_center"
    android:focusable="true"
    android:orientation="horizontal"
    app:rl_focus="true"
    app:rl_scale="1.06">

    <View
        android:id="@+id/general_item_template16d_tag"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:background="#ffc988" />

    <TextView
        android:id="@+id/general_item_template16d_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:ellipsize="end"
        android:focusable="false"
        android:gravity="center_vertical|left"
        android:paddingLeft="16dp"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/general_item_template16d_info"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:focusable="false"
        android:gravity="center_vertical|left"
        android:paddingLeft="4dp"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textSize="12sp" />

</tv.huan.bilibili.widget.template16.Template16LinearLayoutCard>