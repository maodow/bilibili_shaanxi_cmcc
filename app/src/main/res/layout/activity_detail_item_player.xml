<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_236"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="@dimen/dp_420"
        android:layout_height="match_parent"
        android:focusable="false">

        <tv.huan.bilibili.widget.player.PlayerView
            android:id="@+id/detail_player_item_video"
            android:layout_width="@dimen/dp_420"
            android:layout_height="match_parent"
            android:focusable="false" />

        <ImageView
            android:id="@+id/detail_player_item_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_shape_placeholder_hz" />

        <ImageView
            android:id="@+id/detail_player_item_sign"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_78"
            android:src="@drawable/ic_play" />

        <TextView
            android:id="@+id/detail_player_item_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_player_item_sign"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/detail_warning"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/detail_player_item_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_player_item_warning"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/detail_player_item_logo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_17"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_9"
            android:src="@drawable/ic_bilibili" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="8">

        <TextView
            android:id="@+id/detail_player_item_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:gravity="center_vertical|left"
            android:textColor="#ffffff"
            android:textSize="28sp" />

        <LinearLayout
            android:id="@+id/detail_player_item_pic"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_player_item_tag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:textColor="@color/color_aaaaaa"
                android:textSize="@dimen/sp_11" />

        </LinearLayout>

        <TextView
            android:id="@+id/detail_player_item_info"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="top|left"
            android:layout_weight="3"
            android:background="@drawable/bg_selector_common_noboard"
            android:ellipsize="end"
            android:focusable="true"
            android:padding="@dimen/dp_10"
            android:textColor="@color/color_selector_text_aaaaa_00000"
            android:textSize="@dimen/sp_12" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.8" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:focusable="false"
            android:orientation="horizontal">

            <lib.kalu.leanback.plus.TextViewPlus
                android:id="@+id/detail_player_item_vip"
                android:layout_width="@dimen/dp_93"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/bg_selector_common_noboard"
                android:drawableTop="@drawable/ic_selector_common_chao"
                android:drawablePadding="@dimen/dp_8"
                android:focusable="true"
                android:gravity="center"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_4"
                android:text="@string/detail_vip"
                android:textColor="@color/color_selector_text_ffffff_00000"
                android:textSize="@dimen/sp_12"
                android:visibility="gone"
                app:tvp_drawable_top_height="@dimen/dp_21"
                app:tvp_drawable_top_width="@dimen/dp_21" />

            <lib.kalu.leanback.plus.TextViewPlus
                android:id="@+id/detail_player_item_full"
                android:layout_width="@dimen/dp_93"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/bg_selector_common_noboard"
                android:drawableTop="@drawable/ic_selector_common_full"
                android:drawablePadding="@dimen/dp_8"
                android:focusable="true"
                android:gravity="center"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_4"
                android:text="@string/detail_full"
                android:textColor="@color/color_selector_text_ffffff_00000"
                android:textSize="@dimen/sp_12"
                app:tvp_drawable_top_height="@dimen/dp_21"
                app:tvp_drawable_top_width="@dimen/dp_21" />

            <lib.kalu.leanback.plus.TextViewPlus
                android:id="@+id/detail_player_item_favor"
                android:layout_width="@dimen/dp_93"
                android:layout_height="match_parent"
                android:background="@drawable/bg_selector_common_noboard"
                android:drawableTop="@drawable/ic_selector_common_favor"
                android:drawablePadding="@dimen/dp_8"
                android:focusable="true"
                android:gravity="center"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_4"
                android:text="@string/detail_favor"
                android:textColor="@color/color_selector_text_ffffff_00000"
                android:textSize="@dimen/sp_12"
                app:tvp_drawable_top_height="@dimen/dp_21"
                app:tvp_drawable_top_width="@dimen/dp_21" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>