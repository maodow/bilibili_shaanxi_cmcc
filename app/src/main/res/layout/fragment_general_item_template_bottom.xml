<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="20dp">

    <lib.kalu.leanback.round.RoundRelativeLayout
        android:id="@+id/general_item_template_bottom"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:background="@drawable/item_common_bg_r8"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:longClickable="false"
        app:rl_corner_bottom_left="8dp"
        app:rl_corner_bottom_right="8dp"
        app:rl_corner_top_left="8dp"
        app:rl_corner_top_right="8dp"
        app:rl_focus="true"
        app:rl_rate_height="0.3"
        app:rl_scale="1.1">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

    </lib.kalu.leanback.round.RoundRelativeLayout>

</RelativeLayout>
