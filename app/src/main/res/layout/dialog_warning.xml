<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false">

    <LinearLayout
        android:layout_width="@dimen/dp_450"
        android:layout_height="@dimen/dp_180"
        android:layout_centerInParent="true"
        android:background="@color/color_171819"
        android:focusable="false"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="@string/dialog_warning_title"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_22" />

        <TextView
            android:id="@+id/dialog_warning_sure"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/bg_selector_303030_ffffff"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/dialog_warning_sure"
            android:textColor="@color/color_selector_text_bdbdbd_3d3d3d"
            android:textSize="@dimen/sp_18" />

    </LinearLayout>


</RelativeLayout>