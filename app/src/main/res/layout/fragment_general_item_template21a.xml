<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_260"
    android:layout_weight="5"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusable="false"
    android:orientation="horizontal">

    <!-- 详情 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_toLeftOf="@id/general_template21_player"
        android:layout_weight="2"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/general_template21_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="bottom|left"
                    android:lines="1"
                    android:singleLine="true"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/sp_31" />

                <TextView
                    android:id="@+id/general_template21_cname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="bottom|left"
                    android:lines="1"
                    android:singleLine="true"
                    android:textColor="@color/color_ec0000"
                    android:textSize="@dimen/sp_15" />

            </LinearLayout>

            <ImageView
                android:id="@+id/general_template21_poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_shape_placeholder"
                android:scaleType="fitStart"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/general_template21_tag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:ellipsize="end"
                android:lines="1"
                android:gravity="center_vertical|left"
                android:textColor="@color/color_838383"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/general_template21_score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:textColor="@color/color_ff9f0a"
                android:minEms="3"
                android:maxEms="3"
                android:textSize="@dimen/sp_21" />

        </LinearLayout>

        <TextView
            android:id="@+id/general_template21_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dp_4"
            android:gravity="top|left"
            android:maxLines="5"
            android:textColor="@color/color_838383"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <!-- 播放器 -->
    <tv.huan.bilibili.widget.player.PlayerViewTemplate21
        android:id="@+id/general_template21_player"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:focusable="false" />

</LinearLayout>