<?xml version="1.0" encoding="utf-8"?>
<lib.kalu.leanback.round.RoundRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_common_bg_r8"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:longClickable="false"
    app:rl_corner_bottom_left="8dp"
    app:rl_corner_bottom_right="8dp"
    app:rl_corner_top_left="8dp"
    app:rl_corner_top_right="8dp"
    app:rl_focus="true"
    app:rl_rate_height="0.54"
    app:rl_scale="1.1">

    <!-- 图片 -->
    <ImageView
        android:id="@+id/album_item_img_template18"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false"
        android:scaleType="fitXY" />

    <!-- 标题 -->
    <TextView
        android:id="@+id/album_item_name_template18"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:clickable="false"
        android:ellipsize="marquee"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="bottom|left"
        android:longClickable="false"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:paddingBottom="8dp"
        android:singleLine="true"
        android:text="-"
        android:textColor="#ffffff"
        android:textSize="12sp" />

</lib.kalu.leanback.round.RoundRelativeLayout>