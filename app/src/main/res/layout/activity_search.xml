<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <tv.huan.bilibili.widget.menu.MenuLayout
        android:id="@+id/search_menu"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:clipChildren="false"
        android:clipToPadding="false" />

    <tv.huan.bilibili.widget.keyboard.KeyboardView
        android:id="@+id/search_keyboard"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_below="@id/search_menu"
        android:gravity="center_vertical"
        android:paddingLeft="48dp"
        android:paddingRight="40dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignRight="@id/search_keyboard"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="24dp"
        android:background="#06031e" />

    <!-- 热搜影片, 提示 -->
    <TextView
        android:id="@+id/keyboard_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="72dp"
        android:focusable="false"
        android:gravity="center_vertical|left"
        android:paddingLeft="40dp"
        android:text="热搜影片"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_11" />

    <!-- 搜索结果 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="102dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingLeft="40dp"
        android:paddingTop="14dp"
        android:paddingRight="48dp"
        android:paddingBottom="24dp" />

