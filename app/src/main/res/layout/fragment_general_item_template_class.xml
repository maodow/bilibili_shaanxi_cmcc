<?xml version="1.0" encoding="utf-8"?>
<lib.kalu.leanback.round.RoundRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_common_bg_r8"
    android:focusable="true"
    app:rl_corner_bottom_left="8dp"
    app:rl_corner_bottom_right="8dp"
    app:rl_corner_top_left="8dp"
    app:rl_corner_top_right="8dp"
    app:rl_focus="true"
    app:rl_rate_height="0.4"
    app:rl_scale="1.1">

    <!-- 图片 -->
    <lib.kalu.leanback.marquee.MarqueeTextView
        android:id="@+id/album_item_name_template_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:focusable="false"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:text="-"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold" />

</lib.kalu.leanback.round.RoundRelativeLayout>