            android:singleLine="true"
            android:text="33333333333333"
            android:textColor="@color/color_aaaaaa"
            android:textSize="@dimen/sp_11" />

    </lib.kalu.leanback.round.RoundLinearLayout>

    <!-- type2_item2 -->
    <lib.kalu.leanback.round.RoundLinearLayout
        android:id="@+id/general_template20b_type2_item2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/bg_selector_common_template20_allb"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:visibility="gone"
        android:weightSum="3"
        app:rl_scale="1.1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_weight="1.4"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:ellipsize="end"
            android:focusable="false"
            android:gravity="bottom|left"
            android:lines="1"
            android:singleLine="true"
            android:text="@string/template_rec"
            android:textColor="@color/color_aaaaaa"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_weight="1.6"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:ellipsize="end"
            android:focusable="false"
            android:gravity="top|left"
            android:lines="1"
            android:singleLine="true"
            android:text="@string/template_warning"
            android:textColor="@color/color_aaaaaa"
            android:textSize="@dimen/sp_11" />

    </lib.kalu.leanback.round.RoundLinearLayout>

    <!-- type3 -->
    <lib.kalu.leanback.round.RoundRelativeLayout
        android:id="@+id/general_template20b_type3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:background="@drawable/bg_selector_common_template20_alla"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="true"
        android:gravity="center"
        android:visibility="gone"
        app:rl_scale="1.1">

        <lib.kalu.leanback.plus.TextViewPlus
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_selector_common_rec"
            android:drawablePadding="@dimen/dp_13"
            android:focusable="false"
            android:gravity="center"
            android:text="@string/template_rec"
            android:textColor="@color/color_aaaaaa"
            android:textSize="@dimen/sp_14"
            app:tvp_drawable_top_height="@dimen/dp_44"
            app:tvp_drawable_top_width="@dimen/dp_44" />

    </lib.kalu.leanback.round.RoundRelativeLayout>

