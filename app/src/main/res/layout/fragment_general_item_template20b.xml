<?xml version="1.0" encoding="utf-8"?>
<tv.huan.bilibili.widget.template20.Template20LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_24"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusable="false"
    android:orientation="vertical"
    android:weightSum="3">

    <!-- type1_item1 -->
    <lib.kalu.leanback.round.RoundLinearLayout
        android:id="@+id/general_template20b_type1_item1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_weight="1"
        android:background="@drawable/bg_selector_common_template20_reca"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:visibility="gone"
        android:weightSum="5"
        app:rl_scale="1.1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_weight="3"
            android:ellipsize="end"
            android:focusable="false"
            android:gravity="center_vertical|left"
            android:lines="1"
            android:singleLine="true"
            android:text="3344444444444444444"
            android:textColor="@color/color_aaaaaa"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_weight="2"
            android:ellipsize="end"
            android:focusable="false"
            android:gravity="center_vertical|left"
            android:lines="1"
            android:singleLine="true"
            android:text="33333333333333"
            android:textColor="@color/color_aaaaaa"
            android:textSize="@dimen/sp_11" />

    </lib.kalu.leanback.round.RoundLinearLayout>

    <!-- type1_item2 -->
    <lib.kalu.leanback.round.RoundLinearLayout
        android:id="@+id/general_template20b_type1_item2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_weight="1"
        android:background="@drawable/bg_selector_common_template20_recb"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:visibility="gone"
        android:weightSum="5"
        app:rl_scale="1.1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_weight="3"
            android:ellipsize="end"
            android:focusable="false"
            android:gravity="center_vertical|left"
            android:lines="1"
            android:singleLine="true"
            android:text="3344444444444444444"
            android:textColor="@color/color_aaaaaa"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_weight="2"
            android:ellipsize="end"
            android:focusable="false"
            android:gravity="center_vertical|left"
            android:lines="1"
            android:singleLine="true"
            android:text="33333333333333"
            android:textColor="@color/color_aaaaaa"
            android:textSize="@dimen/sp_11" />

    </lib.kalu.leanback.round.RoundLinearLayout>

    <!-- type1_item3 -->
    <TextView
        android:id="@+id/general_template20b_type1_item3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_selector_common_template20_allb"
        android:ellipsize="end"
        android:focusable="true"
        android:gravity="center_vertical|left"
        android:lines="1"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:singleLine="true"
        android:text="@string/template_rec"
        android:textColor="@color/color_aaaaaa"
        android:textSize="@dimen/sp_14"
        android:visibility="gone" />

    <!-- type2_item1 -->
    <lib.kalu.leanback.round.RoundLinearLayout
        android:id="@+id/general_template20b_type2_item1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_weight="1"
        android:background="@drawable/bg_selector_common_template20_reca"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:visibility="gone"
        android:weightSum="5"
        app:rl_scale="1.1">

        <TextView
            android:id="@+id/template20b_reca_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_weight="3"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:ellipsize="end"
            android:focusable="false"
            android:gravity="center_vertical|left"
