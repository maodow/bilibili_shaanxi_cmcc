<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_66171819"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="@dimen/dp_500"
        android:layout_height="@dimen/dp_260"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_shape_dialog_exit"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_66"
            android:layout_alignTop="@id/dialog_exit_list"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="@string/dialog_exit_title"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_22" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dialog_exit_list"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:clipChildren="false"
            android:clipToPadding="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_exit_cancle"
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/bg_selector_303030_ffffff"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/dialog_exit_cancle"
                android:textColor="@color/color_selector_bdbdbd_3d3d3d"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/dialog_exit_sure"
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@drawable/bg_selector_303030_ffffff"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/dialog_exit_sure"
                android:textColor="@color/color_selector_bdbdbd_3d3d3d"
                android:textSize="@dimen/sp_18" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>