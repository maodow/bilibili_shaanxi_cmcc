<?xml version="1.0" encoding="utf-8"?>
<tv.huan.bilibili.widget.template2.RoundRelativeLayoutTemplate21 xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true">

    <!-- 图片 -->
    <ImageView
        android:id="@+id/general_template2_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:scaleType="fitXY" />

    <!-- 标题 -->
    <tv.huan.bilibili.widget.ShandowTextView
        android:id="@+id/general_template2_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:ellipsize="marquee"
        android:focusable="false"
        android:gravity="bottom|left"
        android:text="-"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sp_14" />

</tv.huan.bilibili.widget.template2.RoundRelativeLayoutTemplate21>