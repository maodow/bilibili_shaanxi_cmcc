<?xml version="1.0" encoding="utf-8"?>
<lib.kalu.leanback.round.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_shape_special2_item2"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:longClickable="false"
    android:padding="2dp"
    android:weightSum="10"

    app:rl_rate_height="0.3"
    app:rl_scale="1.05">

    <!--    app:rl_corner_bottom_left="3dp"-->
    <!--    app:rl_corner_bottom_right="3dp"-->
    <!--    app:rl_corner_top_left="3dp"-->
    <!--    app:rl_corner_top_right="3dp"-->

    <lib.kalu.leanback.round.RoundImageView
        android:id="@+id/special2_item_img"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:scaleType="centerCrop"
        app:riv_corner="3dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:weightSum="10">

        <!-- 标题 -->
        <TextView
            android:id="@+id/special2_item_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5.9"
            android:clickable="false"
            android:ellipsize="end"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="left|top"
            android:longClickable="false"
            android:maxLines="2"
            android:text="-"
            android:textColor="#ffffff"
            android:textSize="18sp"
            app:fl_text_color_focus="#3c3c82"
            app:fl_text_color_normal="#ffffff" />

        <!-- 标题 -->
        <TextView
            android:id="@+id/special2_item_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.1"
            android:clickable="false"
            android:ellipsize="end"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="left|top"
            android:longClickable="false"
            android:maxLines="2"
            android:text="-"
            android:textColor="#ffffff"
            android:textSize="15sp"
            app:fl_text_color_focus="#3c3c82"
            app:fl_text_color_normal="#ffffff" />

    </LinearLayout>

</lib.kalu.leanback.round.RoundLinearLayout>