<?xml version="1.0" encoding="utf-8"?>
<lib.kalu.leanback.round.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:longClickable="false"
    android:orientation="vertical"

    app:rl_scale="1.2">

    <lib.kalu.leanback.round.RoundRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_shape_special4_item"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false"
        android:padding="4dp"
        app:rl_corner_bottom_left="8dp"
        app:rl_corner_bottom_right="8dp"
        app:rl_corner_top_left="8dp"
        app:rl_corner_top_right="8dp"

        app:rl_rate_width="1.78">

        <!-- 图片 -->
        <ImageView
            android:id="@+id/special4_item_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:longClickable="false"
            android:scaleType="centerCrop" />

    </lib.kalu.leanback.round.RoundRelativeLayout>

    <!-- 标题 -->
    <lib.kalu.leanback.auto.AutoTextView
        android:id="@+id/special4_item_name"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:clickable="false"
        android:ellipsize="marquee"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:longClickable="false"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:singleLine="true"
        android:text="-"
        android:textColor="#ffffff"
        android:textSize="15sp" />

</lib.kalu.leanback.round.RoundLinearLayout>